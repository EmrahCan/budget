# Budget App - Environment Variables Template

# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_app
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5001
NODE_ENV=development

# AI Configuration (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
AI_CATEGORIZATION_ENABLED=true
AI_INSIGHTS_ENABLED=true
AI_RECOMMENDATIONS_ENABLED=true
AI_NL_QUERIES_ENABLED=true
AI_RATE_LIMIT=60
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_ENABLE_LOGGING=true

# Production AI Settings
AI_USE_MOCK_DATA=false
AI_CATEGORIZATION_MIN_CONFIDENCE=70
AI_INSIGHT_MIN_CONFIDENCE=60
AI_RECOMMENDATION_MIN_CONFIDENCE=75

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# API Configuration
REACT_APP_API_URL=http://localhost:5001/api

# Environment
REACT_APP_ENVIRONMENT=development

# Debug Mode
REACT_APP_DEBUG=true

# Development Features
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug

# App Information
REACT_APP_NAME=Budget App (Dev)
REACT_APP_VERSION=1.0.0-dev
